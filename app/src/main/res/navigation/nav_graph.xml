<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.salihkinali.notedailyapp.view.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/actionHome_to_addNote"
            app:destination="@id/addNoteFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/actionHome_to_detailNote"
            app:destination="@id/detailNoteFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.salihkinali.notedailyapp.view.NoteFragment"
        android:label="NoteFragment"
        tools:layout="@layout/fragment_home"
        />
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.salihkinali.notedailyapp.view.AddNoteFragment"
        android:label="AddNoteFragment"
        tools:layout="@layout/fragment_add_note"
        >
        <action
            android:id="@+id/addNote_to_homeFragment"
            app:destination="@id/homeFragment"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailNoteFragment"
        android:name="com.salihkinali.notedailyapp.view.NoteDetailFragment"
        android:label="NoteDetailFragment"
        tools:layout="@layout/fragment_note_detail"
        >
        <argument
            android:name="note"
            app:argType="com.salihkinali.notedailyapp.model.NoteModel" />
        <action
            android:id="@+id/actionDetail_toHomeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>